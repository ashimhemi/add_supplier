<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="5dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/leftarrow"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="100dp"
        android:paddingLeft="50dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:text="Supplier's Info"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="#666565"/>
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:paddingRight="100dp"
        android:paddingLeft="45dp"
        android:layout_height="40dp"
        android:hint="Enter Supplier's Name"
        android:textColorHint="#8E8E8E"
        app:endIconMode="clear_text"
        app:boxStrokeColor="@color/black"
        app:boxBackgroundColor="@color/white"
        app:hintTextColor="@color/black">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:maxLength="11" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingRight="100dp"
        android:paddingLeft="45dp"
        android:hint="Enter Supplier's Phone No."
        android:textColorHint="#8E8E8E"
        app:endIconMode="clear_text"
        app:boxStrokeColor="@color/black"
        app:boxBackgroundColor="@color/white"
        app:hintTextColor="@color/black">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:maxLength="11" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:text="Supplier's Location"
        android:textColor="#666565"
        android:paddingLeft="50dp"
        android:textSize="18dp"
        android:textStyle="bold">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:boxStrokeColor="@color/black"
            android:textColorHint="#8E8E8E"
            app:hintTextColor="@color/black"
            app:endIconTint="@color/black"
            android:hint="Division"
            android:padding="5dp"
            android:textSize="10sp"
            app:hintAnimationEnabled="true"
            app:boxBackgroundColor="@color/white">

            <AutoCompleteTextView
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:inputType="none"
                android:textColor="#8E8E8E"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:boxStrokeColor="@color/black"
            android:textColorHint="#8E8E8E"
            app:hintTextColor="@color/black"
            app:endIconTint="@color/black"
            android:hint="District"
            app:hintAnimationEnabled="true"
            android:padding="5dp"
            android:textSize="14sp"
            app:boxBackgroundColor="@color/white">

            <AutoCompleteTextView
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:inputType="none"
                android:textColor="@color/black"
                />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:text="Supplier's Bazar"
        android:textColor="#666565"
        android:paddingLeft="50dp"
        android:textSize="18dp"
        android:textStyle="bold">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="40dp"
        android:layout_gravity="center">
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:boxStrokeColor="@color/black"
            android:textColorHint="#8E8E8E"
            app:hintTextColor="@color/black"
            app:endIconTint="@color/black"
            android:hint="Bazar Name"
            android:padding="5dp"
            android:textSize="10sp"
            app:hintAnimationEnabled="true"
            app:boxBackgroundColor="@color/white">

            <AutoCompleteTextView
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:inputType="none"
                android:textColor="#8E8E8E"
                />
        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:text="Supplier's Product"
        android:textColor="#666565"
        android:paddingLeft="50dp"
        android:textSize="18dp"
        android:textStyle="bold">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="40dp"
        android:layout_gravity="center">
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:boxStrokeColor="@color/black"
            android:textColorHint="#8E8E8E"
            app:hintTextColor="@color/black"
            app:endIconTint="@color/black"
            android:hint="CHOOSE"
            android:padding="5dp"
            android:textSize="10sp"
            app:hintAnimationEnabled="true"
            app:boxBackgroundColor="@color/white">

            <AutoCompleteTextView
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:inputType="none"
                android:textColor="#8E8E8E"
                />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:gravity="right"
        android:layout_marginTop="100dp"
        >

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:backgroundTint="#A4CEFF"
            app:icon="@drawable/ic_baseline_check_24"
            app:iconTint="@color/white"
            app:cornerRadius="28dp"
            android:layout_marginRight="40dp"/>
    </LinearLayout>







</LinearLayout>